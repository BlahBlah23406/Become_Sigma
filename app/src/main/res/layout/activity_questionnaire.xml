<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Questionnaire">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="409dp"
        android:layout_height="864dp"
        app:srcCompat="@drawable/better_mountains4"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="-7dp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX="1.3"
        android:scaleY="1.3"
        app:srcCompat="@drawable/hkfjdshflshg_01"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-45dp" />

    <TextView
        android:id="@+id/question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/fontbold"
        android:text="What do you want to achieve?"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="294dp"
        android:layout_height="406dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="48dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/button_custom"
        android:fontFamily="@font/raylingregular"
        android:gravity="center"
        android:scaleX="2"
        android:scaleY="0.8"
        android:text="Next"
        android:textScaleX="0.4"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="@+id/imageView2"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/radioButton3"
        android:layout_width="137dp"
        android:layout_height="114dp"
        android:layout_marginStart="128dp"
        android:layout_marginBottom="272dp"
        android:fontFamily="@font/rayligsemibold"
        android:text="Be More Productive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/radioButton2"
        android:layout_width="124dp"
        android:layout_height="99dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/rayligsemibold"
        android:text="Be Happier"
        app:layout_constraintBottom_toTopOf="@+id/radioButton3"
        app:layout_constraintStart_toStartOf="parent" />

    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="123dp"
        android:layout_height="108dp"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/rayligsemibold"
        android:text="Lose Weight"
        app:layout_constraintBottom_toTopOf="@+id/radioButton2"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>